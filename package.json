{
  "name": "github-action-starter",
  "description": "GitHub Actions TypeScript Template",
  "version": "0.0.0",
  "author": "al-imam",
  "private": true,
  "homepage": "https://github.com/al-imam/github-action-starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/al-imam/github-action-starter.git"
  },
  "bugs": {
    "url": "https://github.com/al-imam/github-action-starter/issues"
  },
  "exports": {
    ".": "./entry/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:fix && npm run lint:fix && npm run package",
    "format:fix": "prettier --write **/*.ts",
    "format": "prettier --check **/*.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package": "ncc build src/index.ts -o entry -m"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsonc": "^2.11.1",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "prettier-eslint": "^16.1.2",
    "typescript": "^5.3.3"
  }
}
